package(default_visibility = ["//visibility:public"])

sh_test(
    name = "zero_width_test",
    timeout = "short",
    srcs = ["//utils:eval.sh"],
    args = [
        """
        cd $$(dirname $(location zero_width.py))
        for py in python python2 python3; do
          if which $$py; then
            $$py -m unittest zero_width
          fi
        done
        """,
    ],
    data = ["zero_width.py"],
)

sh_test(
    name = "phonemes_are_uniquely_decodable",
    timeout = "short",
    srcs = ["//utils:eval.sh"],
    args = [
        """
        cut -f1 $(location phoneme.syms) |
        fgrep -v epsilon |
        $(location //utils:uniquely_decodable)
        """,
    ],
    data = [
        "phoneme.syms",
        "//utils:uniquely_decodable",
    ],
)

genrule(
    name = "compile_sinhala_grm",
    srcs = [
        "sinhala.grm",
        "grapheme.syms",
    ],
    outs = ["sinhala.far"],
    cmd = """
        $(location @thrax//:thraxcompiler) \
          --input_grammar=$(location sinhala.grm) \
          --output_far=$@
        """,
    tools = ["@thrax//:thraxcompiler"],
)

sh_test(
    name = "graphemes_test",
    timeout = "short",
    srcs = ["//utils:eval.sh"],
    args = [
        """
        cut -f 1 $(location graphemes_test.tsv) |
        $(location //utils:thrax_g2p) \
          --far=$(location sinhala.far) \
          --far_g2p_key=CODEPOINTS_TO_GRAPHEMES \
          --phoneme_syms=$(location grapheme.syms) |
        diff -U0 - $(location graphemes_test.tsv)
        """,
    ],
    data = [
        "grapheme.syms",
        "graphemes_test.tsv",
        "sinhala.far",
        "//utils:thrax_g2p",
    ],
)

genrule(
    name = "make_string2graphemes_fst",
    srcs = [
        "grapheme.syms",
        "sinhala.far",
    ],
    outs = [
        "UTF8_TO_GRAPHEMES.fst",
        "string2graphemes.fst",
    ],
    cmd = """
        $(location @openfst//:farextract) \
          --filename_prefix=$(@D)/ \
          --keys=UTF8_TO_GRAPHEMES \
          --filename_suffix=.fst \
          $(location sinhala.far) &&
        $(location @openfst//:fstmap) \
          --map_type=to_log64 \
          $(location UTF8_TO_GRAPHEMES.fst) |
        $(location @openfst//:fstsymbols) \
          --osymbols=$(location grapheme.syms) \
          - \
          $(location string2graphemes.fst)
        """,
    tools = [
        "@openfst//:farextract",
        "@openfst//:fstmap",
        "@openfst//:fstsymbols",
    ],
)

sh_test(
    name = "lexicon_test",
    timeout = "long",
    srcs = ["//utils:eval.sh"],
    args = [
        """
        grep '^[^#a-z]' $(location //si/data:lexicon.tsv) |
        $(location //festus:lexicon-diagnostics) \
          --alignables=$(location alignables.txt) \
          --string2graphemes=$(location string2graphemes.fst)
        """,
    ],
    data = [
        "alignables.txt",
        "string2graphemes.fst",
        "//festus:lexicon-diagnostics",
        "//si/data:lexicon.tsv",
    ],
)

sh_test(
    name = "prompt_words_in_lexicon",
    timeout = "short",
    srcs = ["//utils:eval.sh"],
    args = [
        """
        "$(location prompt_words_in_lexicon.py)" \
          "$(location //si/data:prompts.tsv)" \
          "$(location //si/data:lexicon.tsv)"
        """,
    ],
    data = [
        "prompt_words_in_lexicon.py",
        "//si/data:lexicon.tsv",
        "//si/data:prompts.tsv",
    ],
)
